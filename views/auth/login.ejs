<% layout('layout/boilerplate') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/styles/signin.css">

    <style>
        .loginDiv {
            position: relative;
            top: 10vh;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: center;
        }

        .google {
            background-color: #dd4b39;
            color: white;
        }

        .google:hover {
            background-color: white;
            color: #dd4b39;
        }

        .fb {
            background-color: #3B5998;
            color: white;
        }

        .fb:hover {
            color: #3B5998;
            background-color: white;
        }

        .goo-short {
            color: #c52814;
        }

        .goo-short:hover {
            color: #dd4b39;
        }

        .fb-short {
            color: #064ee7;
        }

        .fb-short:hover {
            color: #6489da;
        }


        @media screen and (min-width:450px) {
            .signup-low {
                display: none;
            }

            .only-in {
                display: none;
            }
        }

        @media screen and (min-width:310px) {
            .direct-icon {
                display: none;
            }

            .hori {
                display: none;
            }
        }


        /* 768-995 */
        @media screen and (min-width: 769px) and (max-width: 995px) {
            .social {
                margin: 20px;
            }
        }

        /* 535-767 */
        @media screen and (min-width: 535px) and (max-width: 768px) {
            .loginDiv {
                display: flex;
                flex-direction: column;
            }

            .line {
                display: none;
            }

            .direct {
                width: 60vw;
                height: 7vh;
            }

            .signup-text {
                font-size: 15px;
            }

            .social {
                position: absolute;
                right: 5vw;
            }

            .inp {
                width: 50vw;
            }
        }

        /* 450-534 */
        @media screen and (min-width: 450px) and (max-width: 534px) {
            .loginDiv {
                display: flex;
                flex-direction: column;
            }

            .line {
                display: none;
            }

            .direct {
                width: 150%;
                height: 7vh;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .a-signup {
                display: block;
            }

            .fa {
                margin-right: 10px;
            }

            .social {
                position: absolute;
                right: 11vw;
            }

            .inp {
                width: 70vw;
            }
        }

        /* 310-449 */
        @media screen and (min-width: 310px) and (max-width: 449px) {
            .loginDiv {
                display: flex;
                flex-direction: column;
            }

            .line {
                display: none;
            }

            .direct {
                width: 150%;
                height: 7vh;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .a-signup {
                display: block;
            }

            .fa {
                margin-right: 10px;
            }

            .social {
                position: absolute;
                right: 12vw;
            }

            .inp {
                width: 70vw;
            }

            .signup-text {
                display: none;
            }

            .signup-low {
                display: inline;
            }

            .please {
                display: none;
            }
        }

        /*0-309 */
        @media screen and (min-width: 0px) and (max-width: 309px) {
            .loginDiv {
                display: flex;
                flex-direction: column-reverse;
                align-items: center;
                justify-items: center;
            }

            .line {
                display: none;
            }

            .direct {
                display: none;
            }

            .a-signup {
                display: block;
            }

            .fa {
                margin-right: 10px;
            }

            .social {
                position: absolute;
                right: 8vw;
            }

            .inp {
                width: 70vw;
            }

            .signup-text {
                display: none;
            }

            .signup-low {
                display: block;
            }

            .please {
                display: none;
            }

            .direct-icon {
                width: 5vw;
            }

            .hori {
                border-bottom: 1px solid olive;
                width: 65vw;

            }

        }
    </style>

    <div class="text-center loginDiv " style="background-color: #f5f5f5; height: 100%; width: 100%;">

        <div class="col-6 social" style="position: relative; top: 7vh;">
            <a href="/users/google" class="google btn form-signin my-4 direct "><i class="fa fa-google fa-fw">
                </i> Login with Google+
            </a>
            <a href="/users/facebook" class="fb btn form-signin direct ">
                <i class="fa fa-facebook fa-fw "></i> Login with Facebook
            </a>

            <div class="hori">
                <p></p>
            </div>

            <a href="/users/google" class="btn form-signin my-1 direct-icon mx-3" style="font-size: 0.7rem;">
                <i class="fab fa-google-plus-square fa-4x goo-short"></i>
            </a>
            <a href="/users/facebook" class="fb-short btn form-signin direct-icon mx-3" style="font-size: 0.7rem;">
                <i class="fab fa-facebook-f fa-4x fb-shor"></i>
            </a>

        </div>

        <div class="line" style="border-right:1px solid olive; width: 2px; height: 33vh; position: relative; top: 8vh;">
            <p></p>
        </div>

        <div style="margin: 10px;" class="col-6 manual">
            <form class="form-signin loginDiv needs-validation" style="display: flex;flex-direction: column;"
                action="/users/login" method="POST" novalidate>

                <h1 class="h3 mb-3 font-weight-normal please" style="font-family: sans-serif;">Please sign in</h1>
                <h1 class="h3 mb-3 font-weight-normal only-in" style="font-family: sans-serif;">Sign in</h1>
                <!-- <label for="inputEmail" class="sr-only">Email address</label>
                <input type="email" id="inputEmail" class="form-control inp" placeholder="Email address" required
                    autofocus name="email"> -->
                <label for="inputName" class="sr-only">Username</label>
                <input type="text" id="inputName" class="form-control inp" placeholder="Username" required autofocus
                    name="username">
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="inputPassword" class="form-control inp" placeholder="Password" required
                    name="password">
                <button class="btn btn-lg btn-primary btn-block mt-3" style="width: 100%;" type="submit">Log in</button>
                <hr class="mt-4">
                <p class="signup-text"> Don't have an account? <a href="/users/register"
                        style="font-weight: 600; text-decoration: none;" class="a-signup">Sign
                        up</a> </p>

                <p class="signup-low"> New? <a href="/users/register" style="font-weight: 600; text-decoration: none;"
                        class="a-signup">Sign
                        up</a> </p>
            </form>

        </div>
    </div>



